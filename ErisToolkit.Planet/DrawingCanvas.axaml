<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="800" Height="700"
        x:Class="ErisToolkit.Planet.CanvasWindow">
	<StackPanel>
		<Grid ColumnDefinitions="750,10,512" RowDefinitions="16,16,512" Margin="20,30,0,0" x:Name="grid">
			<Border Grid.Row="2" Grid.Column="0" Background="#ff21262b" CornerRadius="20" Padding="5">
				<Image x:Name="DrawingCanvas" Source="{Binding PlanetToolkit.ImageHelpers.ImageHelper.imgBitmap}" Width="512" Height="512">
				</Image>
			</Border>
		</Grid>
	</StackPanel>
</Window>
